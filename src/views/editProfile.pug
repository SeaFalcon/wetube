extends layouts/main

block content
  .form-container
    form(action=routes.editProfile, method="post", enctype="multipart/form-data")
      .fileUpload
        label(for="avartar") Avartar
        input(type="file", name="avartar", placeholder="Avartar", accept="image/*")
      input(type="text", name="name", placeholder="Name", value=loggedUser.name)
      input(type="email", name="email", placeholder="Email", value=loggedUser.email)
      input(type="submit", value="Update Profile")
