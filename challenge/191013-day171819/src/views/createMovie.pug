include layouts/main

block content
  h1 #{pageTitle}
  form(action="/create", method="post")
    input(type="text", name="title", placeholder="Title", required=true, minlength=3)
    input(type="number", name="year", placeholder="Year", required=true, min="1900", max="2019")
    input(type="number", name="rating", placeholder="Rating", required=true, min="0", max="10", step="0.1")
    textarea(name="synopsis", placeholder="Synopsis", required=true)
    input(type="text", name="genres", placeholder="Genres", required=true)
    input(type="submit", value="Submit")