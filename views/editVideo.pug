extends layouts/main 

block content
  .form-container
    form(action=routes.editVideo(video.id), method="post")
      input(type="text", id="Title", name="title", required=true, value=video.title)
      textarea(name="description", placeholder="Descriptopn", required=true)=video.description
      input(type="submit", value="Update Video")
    a.form-container__link(href=routes.deleteVideo(video.id)) 
      button.delete Delete Video
